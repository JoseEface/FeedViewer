@using FeedViewer.Models;
@{
    
    LoginInfo linfo=null;
    if (Session["UsuarioLogado"] != null)
    {
        linfo = Session["UsuarioLogado"] as LoginInfo;
    }
    else
    {
        //FormsAuthentication.SignOut();

        Response.Redirect(Url.Action("Logout", "Login"));
    }
    
    if(ViewBag.Title == null) 
    {
        ViewBag.Title = "Index";
    }
    if(ViewBag.NomeUsuario == null) 
    {
        if(linfo != null){
            ViewBag.NomeUsuario = linfo.Usuario.nome;
        }
        else{
            ViewBag.NomeUsuario = "Usuário Logado";
        }
    }
    if(ViewBag.LoginUsuario == null)
    {
        if (linfo != null)
        {
            ViewBag.LoginUsuario = linfo.Usuario.login;//User.Identity.Name;
        }
        else
        {
            ViewBag.LoginUsuario = "Usuário Logado";
        }
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Feed Viewer | @ViewBag.Title </title>

    <!-- Bootstrap core CSS -->

    <link href="@Url.Content("~/Content/themes/gentelella/css/bootstrap.min.css")" rel="stylesheet">

    <link href="@Url.Content("~/Content/themes/gentelella/fonts/css/font-awesome.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/themes/gentelella/css/animate.min.css")" rel="stylesheet">

    <!-- Custom styling plus plugins -->
