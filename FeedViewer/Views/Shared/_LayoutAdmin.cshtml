    <link href="@Url.Content("~/Content/themes/gentelella/css/icheck/flat/green.css")" rel="stylesheet">

    
    <script src="@Url.Content("~/Content/themes/gentelella/js/jquery.min.js?version="+DateTime.Now.Millisecond.ToString())"></script>

    <!--[if lt IE 9]>
