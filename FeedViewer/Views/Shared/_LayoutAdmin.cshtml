    <div class="container body">


        <div class="main_container">

            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">

                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Content("~/")" class="site_title"><i class="fa fa-newspaper-o"></i> <span>Feed Viewer</span></a>
                    </div>
                    <div class="clearfix"></div>

                    <!-- menu prile quick info -->
                    <div class="profile" style="cursor: default !important;">
                        <div class="profile_pic">
                            <img src="@Url.Content("~/Content/themes/gentelella/personalizado/img/icon-user.png")" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Bem-vindo,</span>
                            <h2>@ViewBag.NomeUsuario</h2>
                        </div>
                    </div>
                    <!-- /menu prile quick info -->

                    <br /><br /><br /> <br /><br /><br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        
                        <div class="menu_section">
                            <h3>Menu</h3>
                            <ul class="nav side-menu">
                                <li><a><i class="fa fa-home"></i> Inicial <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>
                                            @Html.ActionLink("Página Incial", "Index", "Home")                                            
                                        </li>
                                        <li>@Html.ActionLink("Meus Feeds","Index","RSSFeed")
                                        </li>
                                    </ul>
                                </li>
                                @if(Session["UsuarioLogado"] != null && (Session["UsuarioLogado"] as LoginInfo).Usuario.admin)
                                {
                                <li><a><i class="fa fa-edit"></i> RSS Feeds <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>@Html.ActionLink("Cadastro de Feeds","Cadastro","RSSFeed")
                                        </li>
                                    </ul>
                                </li>
                                }
                                <li><a><i class="fa fa-desktop"></i> Contas de Usuário <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>@Html.ActionLink("Minha Conta","Index","Usuario")
                                        </li>
                                        @if(Session["UsuarioLogado"] != null && (Session["UsuarioLogado"] as LoginInfo).Usuario.admin)
                                        {
                                            <li>
                                                @Html.ActionLink("Cadastro de Usuários", "Cadastro", "Usuario")
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li><a href="@Url.Action("Logout","Login")"><i class="fa fa-sign-out"></i> Sair</a> </li>
                            </ul>
                        </div>
                        
                    </div>
                    <!-- /sidebar menu -->

                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">

                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="@Url.Content("~/Content/themes/gentelella/personalizado/img/icon-user.png")" alt=""> @ViewBag.LoginUsuario
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu animated fadeInDown pull-right">
                                    <li>@Html.ActionLink("Minha conta","Index","Usuario")
                                    </li>
                                    <li><a href="@Url.Action("Logout","Login")"><i class="fa fa-sign-out pull-right"></i> Sair</a>
                                    </li>
                                </ul>
                            </li>

                            
                        </ul>
                    </nav>
                </div>

            </div>
            <!-- /top navigation -->

            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>@ViewBag.Title</h3>
                            <br />
                        </div>

                        
                    </div>

                    <div class="clearfix"></div>
                    @RenderBody()
                    @RenderSection("AreaConteudo", false)

                </div>
            </div>
            <!-- /page content -->
        </div>

    </div>

    <div id="custom_notifications" class="custom-notifications dsp_none">
        <ul class="list-unstyled notifications clearfix" data-tabbed_notifications="notif-group">
        </ul>
        <div class="clearfix"></div>
        <div id="notif-group" class="tabbed_notifications"></div>
    </div>

    <div id="push"></div>
    </div> <!-- envolta -->
    <div id="footer">
        <p>FeedViewer. 2016.</p>
    </div>

    <script src="@Url.Content("~/Content/themes/gentelella/js/bootstrap.min.js")"></script>

    

    <!-- chart js -->
