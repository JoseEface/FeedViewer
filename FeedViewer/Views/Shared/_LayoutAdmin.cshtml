    <script src="@Url.Content("~/Content/themes/gentelella/js/nicescroll/jquery.nicescroll.min.js")"></script>
    <!-- icheck -->
    <script src="@Url.Content("~/Content/themes/gentelella/js/icheck/icheck.min.js")"></script>

    <script src="@Url.Content("~/Content/themes/gentelella/js/custom.js")"></script>

    <script type="text/javascript">

        function sair() {
            $.ajax({
                type: "post",
                url: "@Url.Action("LogoutTeste","Login")",
                dataType: "json",
                success: function (dados) {
                    location.href="@Url.Content("~/EspereLogout.html")";
                },
                error: function (req, erro, msg) {
                    alert("erro");
                    console.log(req);
                    console.log(erro);
                    console.log(msg);
                }
            });
        }

    </script>

    @RenderSection("AreaScript", false)

