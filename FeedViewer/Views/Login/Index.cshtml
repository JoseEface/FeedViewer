@{
    ViewBag.Title = "FeedViewer - Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@model FeedViewer.Models.LoginUsuario

@section AreaHead{
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" />

    <style>
    #formEmail {
        display: none;
    }
    </style>
}


@using (Html.BeginForm("Index", "Login",FormMethod.Post, new { id = "formLogin" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <h1>Entrar no FeedViewer</h1>
    <div>
        @Html.TextBoxFor(model => model.meulogin, new { placeholder = "Login", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.meulogin, null, new { style = "color: red !important;" })
    </div>
    <br />
    <div>
        @Html.PasswordFor(model => model.senha, new { placeholder = "Senha", @class = "form-control" })        
        @Html.ValidationMessageFor(model => model.senha, null, new { style = "color: red !important;" })
    </div>
    <br />
    <div>
        <div style="clear: both; width: 100%; color: red; margin-bottom: 5px;">
             @Html.ValidationMessage("erroExtra")
        </div>
        <input type="submit" class="btn btn-default submit" value="Entrar" id="envform" />
        <!-- <a class="reset_pass" href="#">Lost your password?</a> -->        
    </div>
    <div>
        <br/>
        <a href="javascript:void(0)" id="esqueceu" style="clear: both; width: 100%;">Esqueceu a senha ?</a>
    </div>
    <div class="clearfix"></div>
    <div class="separator">

        <!--<p class="change_link">New to site?
                                <a href="#toregister" class="to_register"> Create Account </a>
                            </p>-->
        <div class="clearfix"></div>
        <br />
        <div>
            <h1><i class="fa fa-newspaper-o"></i> FeedViewer</h1>            
            <p>©2016 Todos os direitos reservados. FeedViewer.</p>
        </div>
    </div>
}



<form method="post" action="@Url.Action("EsqueceSenha")" id="formEmail" >

    @Html.AntiForgeryToken()
    <h1>Entrar no FeedViewer</h1>
    <a href="javascript:void(0)" id="retornar" style="font-weight: bold; text-decoration: underline;">Retornar para o login</a>
    <br /><br />
    <p>Digite seu e-mail para envio da nova senha:</p>
    <div>
        <input type="text" class="form-control" name="campoemail" id="campoemail" placeholder="E-mail"/>
        <span id="vcampoemail" style="color:red;"></span>
    </div>
    <br />
    <div>
        <div style="clear: both; width: 100%; color: red; margin-bottom: 5px;">
        </div>
        <input type="submit" class="btn btn-default submit" value="Enviar" id="EmailEnvia" />
        <!-- <a class="reset_pass" href="#">Lost your password?</a> -->
    </div>
    <div class="clearfix"></div>
    <div class="separator">
        <!--<p class="change_link">New to site?
                                <a href="#toregister" class="to_register"> Create Account </a>
                            </p>-->
        <div class="clearfix"></div>
        <br />
        <div>
            <h1><i class="fa fa-newspaper-o"></i> FeedViewer</h1>
            <p>©2016 Todos os direitos reservados. FeedViewer.</p>
        </div>
    </div>

</form>


@section AreaScript {


    <script type="text/javascript">
        $(document).ready(function () {

            $("#envform").click(function (e) {
                if ($("#formLogin").valid()) {
                    alert("Valido");
                }
                else {
                    alert("invalido");
                }
            });


            $("#esqueceu").click(function () {
                $("#formLogin").hide();
                $("#formEmail").fadeIn();
            });

            $("#retornar").click(function () {
                $("#formEmail").hide();
                $("#formLogin").fadeIn();
            });


        });
    </script>

}